{{#if resume.projects.length}}
<div class="container project-container">
    {{> title value="Open Source Projects"}}

    {{#each resume.projects}}
        <section class="item">
            {{> section-header name=this.title website=this.url}}

            {{#if role}}
                <span class="project__role">{{role}}</span>
            {{/if}}

            {{#if keywords.length}}
            <ul class="project__keywords">
                {{#each keywords}}
                    <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}

            {{#if summary}}
            <p class="summary">{{summary}}</p>
            {{/if}}

            {{#if highlights.length}}
            <ul>
                {{#each highlights}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}
